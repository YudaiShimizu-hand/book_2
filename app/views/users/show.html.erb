<div class="profile-container">
    <h1>User info</h1>
  <h3 class="profile-name">name:<%= @user.name %></h3>
  <h3 class="profile-name">introduction:<%= @user.name %></h3>
  <p><%= link_to "edit", "/users/#{@user.id}/edit" %></p>
</div>

<div class="form">
    <h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit '投稿' %>
<% end %>
</div>

<div class="show-user">
    <h1>Book detail</h1>
    <table>
        <tr>
            <th>Title</th>
            <th>opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.opinion %></td>
        </tr>
        <% end %>
    </table>
</div>
