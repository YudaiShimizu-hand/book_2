 <div class="container">
 <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
  <% end %>
    <div class="row">
    <div class="col-md-3">
    <%= render 'books/list', book: @book, user: @user %>
    </div>
  </div>

    <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <table class="table">
     <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
        </tr>
      </thead>
        <% @books.each do |book| %>
        <tr>
            <td><%= link_to user_path do %>
             <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <% end %>
        </tr>
        <% end %>
       </tbody>
       </table>
     </div>
    </div>
    </div>

