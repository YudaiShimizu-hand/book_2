 <div class="container">
 <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
  <% end %>
    <div class="row">
    <div class="col-md-4">
    <h1>User info</h1>
  <h3 class="profile-name">name:<%= @user.name %></h3>
  <h3 class="profile-name">introduction:<%= @user.information %></h3>
  <%= link_to "/users/#{@user.id}/edit", class: "btn btn-outline-dark", id: "btn" do %>
  <i class="fas fa-wrench"></i>
  <% end %>
  
 
  <div class="form">
    <h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <br>
  <%= f.submit 'Create Book', class: 'btn btn-primary' %>
<% end %>
    </div>
  </div>

    <div class="col-md-8">
    <h1>Book detail</h1>
    <table class="table">
     <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
        </tr>
      </thead>
        <% @books.each do |book| %>
        <tbody>
        <tr>
            <td></td>
            <td><%= book.title %></td>
            <td><%= book.opinion %></td>
        </tr>
        <% end %>
       </tbody>
       </table>
     </div>
    </div>
    </div>

