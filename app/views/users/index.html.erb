<div class="profile-container">
    <h1>User info</h1>
  <h3 class="profile-name">name:<%= @user.name %></h3>
  <h3 class="profile-name">introduction:<%= @user.information %></h3>
  <p><%= link_to "edit", "/users/#{@user.id}/edit" %></p>
</div>

<div class="form">
    <h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit 'Create Book', class: 'btn btn-primary' %>
<% end %>
</div>

<div class="show-user">
    <div class="container">
    <h1>Book detail</h1>
    <table class="table">
        <thead>
         <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
         </tr>
         </thead>
         <tbody>
         <% @books.each do |book| %>
         <tr>
            <td></td>
            <td><%= book.title %><td>
            <td>
               <%= link_to "show", book_path(book.id) %>
            </td>
        </tr>
        <% end %>
        </tbody>
    </table>
    </div>
</div>
