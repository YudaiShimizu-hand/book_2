<div class="container">
    <div class="row">
    <div class="col-md-4">
    <h1>User info</h1>
  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
  <h3 class="profile-name">name:<%= @user.name %></h3>
  <h3 class="profile-name">introduction:<%= @user.introduction %></h3>
  <%= link_to "/users/#{@user.id}/edit", class: "btn btn-outline-dark", id: "btn" do %>
  <i class="fas fa-wrench"></i>
  <% end %>
  
  
   <div class="form">
   <h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  </br>
  <%= f.submit 'Create Book', class: 'btn btn-primary' %>
<% end %>
      </div>
    </div>

    <div class="col-md-8">
    <h1>Book detail</h1>
    <table class="table">
        <thead>
         <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
         </tr>
         </thead>
         <tbody>
         <% @books.each do |book| %>
         <tr>
            <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
            <td><%= book.title %><td>
            <td>
               <%= link_to "show", book_path(book.id) %>
            </td>
        </tr>
        <% end %>
        </tbody>
    </table>
  </div>
  </div>
  </div>
