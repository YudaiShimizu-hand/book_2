  <h2>User info</h2>
<%= attachment_image_tag user, :profile_image,  fallback: "no_image.jpg", size: "60x60" %>


<table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
</tbody></table>
<div class="row">
  <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %><i class="fas fa-user-cog"></i></li><% end %>
</div>

<div class="form">
   <h2>New book</h2>
<%= form_with model: book, local:true do |f| %>
  <label>Title</label>
  <br>
  <%= f.text_field :title %>
  <br>
  <label>opinion</label>
  <br>
  <%= f.text_area :body %>
  <br>
  <br>
  <%= f.submit 'Create Book', class: 'btn btn-primary' %>
<% end %>