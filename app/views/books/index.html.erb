<div class="container">
<% @book.errors.full_messages.each do |message| %>
 <div class="form-error">
  <%= message %>
 </div>
<% end %>
<div class="row">
  <div class="col-md-4">
    <h1>User info</h1>
  <h3 class="profile-name">name:<%= @user.name %></h3>
  <h3 class="profile-name">introduction:<%= @user.information %></h3>
  <%= link_to "/users/#{@user.id}/edit", class: "btn btn-outline-dark", id: "btn" do %>
  <i class="fas fa-wrench"></i>
  <% end %>
  
  <div class="form">
    <h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <br>
  <%= f.submit 'Create Book', class: 'btn btn-primary' %>
<% end %>
    </div>
  </div>
  
<div class="col-md-8">
  <h1>Books</h1>
  <table class="table">
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
    <tr>
      <td></td>
      <td><%= link_to book[:title], book_path(book.id) %></td>
      <td><%= book.opinion %></td>
    </tr>
    </tbody>
    <% end %>
  </table>
</div>
</div>
</div>




  


