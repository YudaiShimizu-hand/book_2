<div class="profile-container">
    <h1>User info</h1>
  <h3 class="profile-name">name:<%= @user %></h3>
  <h3 class="profile-name">introduction:<%= @user %></h3>
  <p><%= link_to "edit", "/users/#{@user.id}/edit" %></p>
</div>

<div class="form">
    <h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit '投稿' %>
<% end %>
</div>

<div class="index">
  <h1>Books</h1>
  <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td></td>
      <td><%= link_to"book.title", book_path(book.id) %></td>
      <td><%= book.opinion %></td>
    </tr>
    <% end %>
  </table>
</div>
