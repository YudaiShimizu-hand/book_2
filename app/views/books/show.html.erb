<div class="form">
    <h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit '投稿' %>
<% end %>
</div>

<div class="show-book">
    <h1>Book detail</h1>
    <table>
        <% @books.each do |book| %>
         <tr>
            <th></th>
            <th><%= book.title %><th>
            <th><%= book.opinion %></th>
            <th>
                <p><%= link_to "edit", edit_book_path(book) %></p>
                <p><%= link_to "destroy", book_path(book.id), method: :delete %></p>
            </th>
        </tr>
        <% end %>
    </table>
</div>