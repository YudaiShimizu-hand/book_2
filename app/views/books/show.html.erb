<div class="container"> 
     <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
      <% end %>
<div class="row">
    <div class="col-md-3">
  <%= render 'books/list', book: Book.new, user: @user %>
      </div>
      </div>

<div class="col-md-8 offset-md-1">
    <h1>Book details</h1>
    <table class="table">
         <tr>
            <td>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></br>
  		         <%= @book.user.name %>
  		        <% end %>
            </td>
            <td><%= link_to @book.title %><td>
            <td><%= @book.body %></td>
         <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => '本当に消しますか？'%></td>
          <% end %>
        </tr>
    </table>
</div>
</div>
</div>

 
