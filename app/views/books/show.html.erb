<div class="form">
     <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
      <% end %>
</div>

<div class="profile-container">
    <h1>User info</h1>
  <h3 class="profile-name">name:<%= current_user.name %></h3> 
  <h3 class="profile-name">introduction:<%= current_user.information %></h3>
  <p><%= link_to "edit", "/users/#{current_user.id}/edit" %></p>
</div>

   <h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit 'Create Book', class: 'btn btn-primary' %>
<% end %>


<div class="show-book">
    <div class="container">
    <h1>Book detail</h1>
    <table class="table">
        <% @books.each do |book| %>
         <tr>
            <th></th>
            <th><%= book.title %><th>
            <th><%= book.opinion %></th>
            <th><%= link_to "edit", edit_book_path(book) %></th>
            <th><%= link_to "destroy", book_path(book.id), method: :delete %></th>
        </tr>
        <% end %>
    </table>
    </div>
    </div>
    
